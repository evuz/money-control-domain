{
  "name": "money-control-domain",
  "version": "0.1.4",
  "description": "Domain to money control",
  "main": "build/index.js",
  "private": true,
  "files": [
    "build/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.15",
    "dotenv": "^6.2.0",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "ts-domain": "^1.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "3.2.2"
  },
  "peerDependencies": {
    "ts-domain": "^1.4.1"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "date-fns": "^1.30.1",
    "mongodb": "^3.1.10",
    "reflect-metadata": "^0.1.10",
    "typeorm": "0.2.9"
  },
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc",
    "dev": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "tslint -p tsconfig.json",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
